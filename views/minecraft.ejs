<%- include('layout') %>
  <div class="max-w-4xl">
    <h1 class="text-3xl font-bold mb-8 flex items-center gap-3"><span class="text-5xl">ðŸŸ©</span> PaperMC 1.21.3 Server
    </h1>

    <% if (!hasPaper) { %>
      <div class="bg-yellow-900 p-6 rounded-lg mb-6">
        <h2 class="text-xl font-bold">First Launch - Downloading PaperMC...</h2>
        <p>Click Start Server â†’ it will auto-download Paper 1.21.3</p>
      </div>
      <% } %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <div class="bg-gray-800 p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4">Server Control</h3>
            <div class="space-x-4">
              <button onclick="fetch('/plugin/minecraft/start', {method:'POST'}).then(()=>location.reload())"
                class="px-6 py-3 bg-green-600 rounded hover:bg-green-700">Start Server</button>
              <button onclick="fetch('/plugin/minecraft/stop', {method:'POST'}).then(()=>location.reload())"
                class="px-6 py-3 bg-red-600 rounded hover:bg-red-700">Stop Server</button>
            </div>
            <p class="text-sm text-gray-400 mt-4">
              <% if (isDocker()) { %>Docker detected - will use Docker<% } else if (isJava()) { %>Java detected - will
                  run directly<% } else { %>No Docker or Java found!<br>Install Java 21 or Docker<% } %>
            </p>
          </div>

          <div class="bg-gray-800 p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4">Plugin Manager</h3>
            <form action="/plugin/minecraft/upload-plugin" method="POST" enctype="multipart/form-data" class="mb-4">
              <input type="file" name="plugin" accept=".jar" required class="mb-2">
              <button type="submit" class="px-4 py-2 bg-blue-600 rounded hover:bg-blue-700">Upload & Install
                Plugin</button>
            </form>
            <div class="space-y-2">
              <% plugins.forEach(p=> { %>
                <div class="flex justify-between items-center bg-gray-700 p-3 rounded">
                  <span>
                    <%= p %>
                  </span>
                  <a href="/storage/minecraft_server/plugins/<%= p %>"
                    class="text-red-400 hover:text-red-300">Delete</a>
                </div>
                <% }) %>
                  <% if (plugins.length===0) { %>
                    <p class="text-gray-500">No plugins installed yet</p>
                    <% } %>
            </div>
          </div>
        </div>

        <div class="bg-gray-800 p-6 rounded-lg">
          <h3 class="text-xl font-bold mb-4">Quick Commands</h3>
          <pre class="text-sm bg-black p-4 rounded overflow-x-auto">
# Run with Docker (recommended)
docker run -d --name mc -p 25565:25565 -v "$(pwd)/minecraft_server":/data -e EULA=TRUE papermc

# Or just click "Start Server" above - does everything automatically!
    </pre>
        </div>
  </div>
